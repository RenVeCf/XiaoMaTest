<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.xuexiang.xqrcode.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:inner_corner_color="@color/tx_bottom_navigation_select"
        app:inner_corner_length="@dimen/y40"
        app:inner_corner_width="@dimen/x5"
        app:inner_height="@dimen/y500"
        app:inner_scan_isCircle="false"
        app:inner_scan_speed="@dimen/x10"
        app:inner_width="@dimen/x500" />
</FrameLayout>